{
    "name": "aham/ez-form",
    "description": "The library to help you making form in the most easiest way",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "role": "Author",
            "name": "Hammoumi Abdelaziz",
            "email": "hammoumi.abdalaziz@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Aham\\EzForm\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Aham\\EzForm\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": "^8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "preferred-install": "dist"
    }
}
